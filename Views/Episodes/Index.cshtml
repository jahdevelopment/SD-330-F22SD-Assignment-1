@model IEnumerable<SD_330_F22SD_Assignment_1.Models.Episode>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Episodes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Podcast)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Podcast.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EpisodeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EpisodeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EpisodeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
